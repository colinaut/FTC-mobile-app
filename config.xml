<?xml version='1.0' encoding='utf-8'?>
<widget id="io.onsen.helloworld" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <preference name="orientation" value="portrait" />
    <name>FTC Mobile App</name>
    <description>
        App for referring physicians of the UCSF Fetal Treatment Center
    </description>
    <author email="colin.fahrion@ucsf.edu" href="http://fetus.ucsfmedicalcenter.org">
        Colin Fahrion
    </author>
    <content src="index.html" />
    <access origin="*" />

    <!-- Default Icon -->
    <icon src="res/icon.png" />

    <!-- iPhone 6 / 6+ -->
    <icon src="res/ios/icon-60@3x.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="res/ios/icon-60.png" platform="ios" width="60" height="60" />
    <icon src="res/ios/icon-60@2x.png" platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="res/ios/icon-76.png" platform="ios" width="76" height="76" />
    <icon src="res/ios/icon-76@2x.png" platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="res/ios/icon-small.png" platform="ios" width="29" height="29" />
    <icon src="res/ios/icon-small@2x.png" platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="res/ios/icon-40.png" platform="ios" width="40" height="40" />
    <icon src="res/ios/icon-40@2x.png" platform="ios" width="80" height="80" />

    <!-- Default Splash -->
    <splash src="splash.png" />

    <!-- iPhone and iPod touch -->
    <splash src="res/ios/Default.png" platform="ios" width="320" height="480" />
    <splash src="res/ios/Default@2x.png" platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="res/ios/Default-568h@2x.png" platform="ios" width="640" height="1136" />

    <!-- iPhone 6 -->
    <splash src="res/ios/Default-667h@2x.png" platform="ios" width="750" height="1334" />
    <splash src="res/ios/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />
    <splash src="res/ios/Default-Landscape-736h@3x.png" platform="ios" width="2208" height="1242" />

    <!-- iPad -->
    <splash src="res/ios/Default-Portrait.png" platform="ios" width="768" height="1024" />
    <splash src="res/ios/Default-Landscape.png" platform="ios" width="1024" height="768" />

    <!-- Retina iPad -->
    <splash src="res/ios/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
    <splash src="res/ios/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" />
</widget>
